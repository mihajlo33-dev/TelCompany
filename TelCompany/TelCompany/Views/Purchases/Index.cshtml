@model IEnumerable<TelCompany.Models.Purchase>

@{
    ViewBag.Title = "Index";
}

<h2>Purchases</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-condensed table-striped table-hover sortable">
	<tr>
		<th>
			@Html.DisplayName("Purchase No : ")
		</th>
		<th>
			@Html.DisplayName("Price: ")
		</th>
		<th>
			@Html.DisplayName("Date: ")
		</th>
		<th>
			@Html.DisplayName("Article: ")
		</th>
		<th></th>
	</tr>

@foreach (var item in Model) {
<tr>
	<td>
		@Html.DisplayFor(modelItem => item.PurchaseID)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.Price)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.Date)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.Article.Name)
	</td>
	<td>
		@Html.ActionLink("Edit", "Edit", new { id = item.PurchaseID }) |
		@Html.ActionLink("Details", "Details", new { id = item.PurchaseID }) |
		@Html.ActionLink("Delete", "Delete", new { id = item.PurchaseID })
	</td>
</tr>
}

</table>
